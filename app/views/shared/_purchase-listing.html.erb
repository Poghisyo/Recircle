<div class="listing-container">
  <div class="row">
    <div class="listing-body">
        <div class="listing">
          <div class="listing-image">
            <% if material.photo? %>
              <%= cl_image_tag material.photo, class: 'listing-photo'%>
            <% else %>
              <p>---- insert placeholder image here ---</p>
            <% end %>
          </div>
          <div class="listing-name">
            <h3><%= material.title %></h3>
            <%= material.category %>
          </div>

          <div class="listing-description">
            <%= material.description %>
          </div>

          <div class="listing-price">
            <h4>Price:</h4>
            <p>
              <strong><%= material.price %></strong> EUR
            </p>
          </div>

          <div class="listing-info">
            <h4>Location:</h4>
            <p>
              <%= material.address %>
            </p>
          </div>


          <div class="listing-status">
            <h4>Purchase status:</h4>
            <h4 class="status pending"><%= purchase.status %></h4>
          </div>


          <%= link_to "view", material_path(material), class: "listing-link"  %>
        </div>
    </div>
  </div>
</div>
