
<div class="container">
  <ul class="inbox">
    <li class="message">
      <div class="avatar-large">
        <% if material.photo? %>
        <%= cl_image_tag material.photo, class: "avatar-large"%>
        <% else %>
        <p>---- insert placeholder image here ---</p>
        <% end %>
      </div>

      <div class="message-name">
        <h3><%= material.title %></h3>
        <%= material.category %>
                <em>
          <%= material.address %>
        </em>
      </div>
      <div class="message-body">
        <%= material.description %>

      </div>

      <div class="listing-status">
        <h4 class="status pending"><%= purchase.status %></h4>
        <p class="price"><strong><%= price_format(material.price) %></strong> EUR</p>
      </div>
      <div class="actions">

        <%= link_to  material_path(material), class: "message-button green" do  %>
        <i class="fa fa-eye"></i>
        <% end %>
        <br>
        <%= link_to material_path(material), method: :delete, data: { confirm: 'Are you sure?' }, class: "message-button red" do %>
        <i class="fa fa-times"></i>
        <% end %>
      </div>
    </li>
  </ul>
</div>
