<div class="wrapper">

  <div class="card ">
    <div class="card__image border-tlr-radius">
      <img src=<%= image_path("wood_waste.jpg")%> alt="image" class="border-tlr-radius">
    </div>

    <div class="card__content card__padding">
      <div class="card__share">
        <div class="card__social">
          <a class="share-icon" href="#"><span class="fa fa-star"></span></a>
          <a class="share-icon" href="#"><span class="fa fa-heart"></span></a>
          <a class="share-icon" href="#"><span class="fa fa-share"></span></a>
        </div>

        <a id="share" class="share-toggle share-icon" href="#"></a>
      </div>

      <div class="card__meta">
        <a
          href="#"><%= material.supplier %>
        </a>
        <time>
          <%= material.created_at %>
        </time>
      </div>

      <article class="card__article">
        <p>
          <%= material.title %>
        </p>
      </article>
    </div>

      <div class="card__price">
          <a
          href="#"> <%= material.price %> EUR/unit
          </a>
      </div>
    </div>
  </div>

</div>
