
<!-- Modal -->
<div class="modal fade" id="contact-supplier" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="title-excess-material">Contact Supplier</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       from: <%= @chat.sender.email %>
       to: <%= @chat.receiver.email %>

       <%= simple_form_for(@message, url: dashboard_chat_messages_path(@chat), html: { method: :post}) do |f| %>
       <%= f.input :subject %>
       <%= f.input :content %>
     </div>
     <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <%= f.button :submit, "Send Message", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
</div>
