<ul class="material-specs">

  <li><h4><strong>
    <%= @material.title %>
  </strong>
</h4>
</li>
<li><h5><%= @material.supplier %></h5></li>
<li>
  <% 4.times do  %>
  <i class="fa fa-star" aria-hidden="true"></i>
  <% end %>
  <% (5 - 4).times do %>
  <i class="fa fa-star-o" aria-hidden="true"></i>
  <% end %>
</li>
<ul class="padding-text">
  <li>
    <p>
      <span>
        <i class="fa fa-cog" aria-hidden="true"></i>
        <%= @material.category %>
      </span>
    </p>
  </li>
    <li>
    <p>
      <span>
        <i class="fa fa-envelope" aria-hidden="true"></i>
      </span>
      <%= simple_form_for @chat, url: dashboard_chats_path do |f| %>
      <%= f.input :receiver_id, input_html: { value: @material.seller.id }, as: :hidden %>
      <%= f.input :sender_id, input_html: { value: current_user.id }, as: :hidden %>
      <%= f.submit "chat", class: "btn-order" %>
      <% end %>
    </p>
  </li>
  <li>
    <p>
      <span>
        <i class="fa fa-euro gray" aria-hidden="true"></i>
      </span>
      <%=  @material.price %> per kg
    </p>
  </li>
  <li>
    <p>
      <span>
        <i class="fa fa-globe gray" aria-hidden="true"></i>
      </span>
      <%=  @material.address %>
    </p>
  </li>
</ul>
</ul>
