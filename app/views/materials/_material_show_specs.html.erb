<ul class="info-card">

  <li><h4><strong>
    <%= @material.title %>
  </strong>
</h4>
</li>
<li><h5><%= @material.supplier %></h5></li>
<li>
  <% 4.times do  %>
  <i class="fa fa-star" aria-hidden="true"></i>
  <% end %>
  <% (5 - 4).times do %>
  <i class="fa fa-star-o" aria-hidden="true"></i>
  <% end %>
</li>
<ul class="padding-text">
  <li>
    <p>
      <span>
        <i class="fa fa-cog" aria-hidden="true"></i>
        <%= @material.category %>
      </span>
    </p>
  </li>
  <li>
    <p>
      <span>
        <i class="fa fa-euro gray" aria-hidden="true"></i>
      </span>
      <%=  @material.price %> per kg
    </p>
  </li>
  <li>
    <p>
      <span>
        <i class="fa fa-globe gray" aria-hidden="true"></i>
      </span>
      <%=  @material.address %>
    </p>
  </li>
  <div class="chat-form">
      <%= render partial: 'modal_contact_supplier' %>

    <button type="button" class="btn btn-order" data-toggle="modal" data-target="#contact-supplier">
      Contact Supplier
    </button>
  </div>
</ul>
</ul>
